<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <android.support.v7.widget.AppCompatTextView
                        android:layout_margin="8dp"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" با پر کردن مشخصات زیر می توانید در برنامه ما ثبت نام کنید."/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:id="@+id/Activity_create_Profile_edt_name"
                        android:layout_marginLeft="30dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="نام خود را وارد کنید"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_margin="8dp"
                        android:textSize="18dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="نام : "
                        />


                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:id="@+id/Activity_create_Profile_edt_family"
                        android:layout_marginLeft="30dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="نام خانوادگی خود را وارد کنید"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_margin="8dp"
                        android:textSize="18dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="نام خانوادگی : "
                        />


                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:inputType="number"
                        android:id="@+id/Activity_create_Profile_edt_phoneNumber"
                        android:hint="شماره موبایل خود را وارد کنید"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_margin="8dp"
                        android:textSize="18dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="شماره موبایل : "
                        />


                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:gravity="right"
                        android:inputType="textPassword"
                        android:id="@+id/Activity_create_Profile_edt_pass"
                        android:hint="رمز عبور خود را تعیین کنید"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_margin="8dp"
                        android:textSize="18dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="رمز عبور :"
                        />


                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:gravity="right"
                        android:id="@+id/Activity_create_Profile_edt_repeatPass"
                        android:hint="رمز عبور خود را دوباره وارد کنید"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_margin="8dp"
                        android:textSize="18dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="تکرار رمز عبور :"
                        />


                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:id="@+id/Activity_create_Profile_edt_email"
                        android:hint="آدرس ایمیل خود را وارد کنید"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_margin="8dp"
                        android:textSize="18dp"
                        android:layout_width="100dp"                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:gravity="right"
                        android:text="ایمیل :"
                        />


                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="1"
                        android:hint="آدرس  خود را وارد کنید"
                        android:id="@+id/Activity_create_Profile_edt_address"
                        android:maxLines="2" />
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_margin="8dp"
                        android:textSize="18dp"
                        android:layout_width="100dp"                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="آدرس : "
                        />


                </LinearLayout>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="8dp"

                    android:text="لطفا آدرس خود را روی نقشه مشخص کنید. "/>

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:map="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/Activity_create_Profile_frag_map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/Activity_create_Profile_btn_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تایید اطلاعات"
                    android:layout_gravity="center"
                    android:layout_marginBottom="70dp"/>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <android.support.design.widget.BottomNavigationView
        app:itemBackground="@color/colorPrimary"

        app:itemIconTint="#ffffff"
        app:itemTextColor="#ffffff"
        android:id="@+id/activityMain_bnv_bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_navigation" />

</android.support.constraint.ConstraintLayout>